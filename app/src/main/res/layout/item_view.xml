<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout android:id="@+id/event_creation_form" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/label_event_details"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Event Details: "
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:singleLine="true" android:layout_weight="1.0"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/label_event_name"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Name: "
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0" />

            <TextView android:id="@+id/event_name"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Event Name"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/event_name">

            <TextView android:id="@+id/label_event_location"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Location: "
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>


            <TextView android:id="@+id/event_location"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Event Location"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/event_start_time">

            <TextView android:id="@+id/label_start_time"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Begins At: "
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>


            <TextView android:id="@+id/start_date"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Start Date Time"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/event_start_time">

            <TextView android:id="@+id/label_end_time"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Ends At:"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

            <TextView android:id="@+id/end_date"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="End Date Time"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/event_start_time">

            <TextView android:id="@+id/label_approval_status"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Approval Status:"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

            <TextView android:id="@+id/approval_status"
                android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Status"
                android:maxLines="1"
                android:singleLine="true" android:layout_weight="1.0"/>

        </LinearLayout>


